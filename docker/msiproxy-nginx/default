upstream wildfly {
   server localhost:8080;
}

server {
  listen 80;
  listen 443 ssl;
  server_name msi_proxy.e-navigation.net;

  ssl_certificate /etc/certs/e-navigation.net.crt;
  ssl_certificate_key /etc/certs/e-navigation.net.key;

  access_log /var/log/nginx/msi-proxy.access.log;

  location / {
    proxy_pass http://wildfly;
  }
}